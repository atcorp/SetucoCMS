        <?php else: ?>
            <?php foreach ($messages as $message):?>
        <p><?php echo $message ?></p>
            <?php endforeach ?>
        <?php endif ?>
    <?php endforeach ?>
        <p>
            <a href="javascript:void(0)" onclick="hideFlashMessage()">OK</a>
        </p>
    </div>
